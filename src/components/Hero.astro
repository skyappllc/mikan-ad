---
---

<section
  class="relative min-h-screen flex items-center justify-center overflow-hidden bg-mikan"
  aria-label="ヒーローセクション"
>
  <!-- グリッドパターン背景 -->
  <div
    class="absolute inset-0 bg-pattern-grid opacity-15 pointer-events-none"
    aria-hidden="true"
  ></div>

  <!-- デコレーション要素 -->
  <div class="absolute top-20 left-8 md:left-20 opacity-30 pointer-events-none" aria-hidden="true">
    <div class="w-16 h-16 bg-ink rounded-full border-[3px] border-ink"></div>
  </div>
  <div class="absolute bottom-32 right-8 md:right-24 opacity-20 pointer-events-none" aria-hidden="true">
    <div class="w-24 h-24 border-[4px] border-ink rotate-12"></div>
  </div>
  <div class="absolute top-1/3 right-12 md:right-32 opacity-25 pointer-events-none" aria-hidden="true">
    <div class="w-8 h-8 bg-ink rotate-45"></div>
  </div>

  <div class="relative z-10 max-w-6xl mx-auto px-4 sm:px-6 w-full">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-16 items-center">

      <!-- テキストコンテンツ -->
      <div>
        <!-- バッジ -->
        <div class="hero-title inline-flex items-center gap-2 mb-6">
          <span
            class="px-4 py-1.5 bg-ink text-white font-bold text-sm tracking-widest uppercase border-[3px] border-ink brutal-shadow-sm"
          >
            Since 2015
          </span>
          <span
            class="px-4 py-1.5 bg-white text-ink font-bold text-sm border-[3px] border-ink brutal-shadow-sm"
          >
            広告 × テクノロジー
          </span>
        </div>

        <!-- メインタイトル -->
        <h1
          class="hero-title font-display text-5xl sm:text-6xl md:text-7xl lg:text-8xl text-ink leading-[1.1] mb-6"
        >
          株式会社<br />
          <span class="text-white" style="text-shadow: 4px 4px 0 #1A1A1A;">みかん</span>
        </h1>

        <!-- タグライン -->
        <p
          class="hero-tagline text-xl sm:text-2xl font-bold text-ink mb-8 leading-snug"
        >
          広告とテクノロジーで、<br class="sm:hidden" />
          ビジネスを加速する
        </p>

        <!-- CTA ボタン -->
        <div class="hero-cta flex flex-wrap gap-4">
          <a
            href="#services"
            class="inline-flex items-center gap-2 px-8 py-4 bg-ink text-white font-black text-lg brutal-btn no-underline"
          >
            サービスを見る
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" aria-hidden="true">
              <path d="M4 10H16M16 10L10 4M16 10L10 16" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
          <a
            href="#contact"
            class="inline-flex items-center gap-2 px-8 py-4 bg-white text-ink font-black text-lg brutal-btn no-underline"
          >
            お問い合わせ
          </a>
        </div>
      </div>

      <!-- みかんイラスト (SVG) -->
      <div class="flex justify-center lg:justify-end" aria-hidden="true">
        <div class="hero-illustration relative">
          <!-- 大きなみかん -->
          <svg
            width="280"
            height="300"
            viewBox="0 0 280 300"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
            class="drop-shadow-2xl"
          >
            <!-- 影 -->
            <ellipse cx="144" cy="292" rx="80" ry="8" fill="#1A1A1A" opacity="0.3"/>

            <!-- 葉っぱ -->
            <ellipse cx="132" cy="60" rx="18" ry="36" fill="#4CAF50" stroke="#1A1A1A" stroke-width="3" transform="rotate(-20 132 60)"/>
            <ellipse cx="158" cy="52" rx="14" ry="28" fill="#4CAF50" stroke="#1A1A1A" stroke-width="3" transform="rotate(15 158 52)"/>

            <!-- 茎 -->
            <line x1="140" y1="70" x2="140" y2="90" stroke="#1A1A1A" stroke-width="4" stroke-linecap="round"/>

            <!-- みかん本体 -->
            <circle cx="140" cy="180" r="100" fill="#FF8C00" stroke="#1A1A1A" stroke-width="4"/>

            <!-- みかんのハイライト -->
            <circle cx="110" cy="148" r="22" fill="#FFB347" opacity="0.6"/>
            <circle cx="104" cy="142" r="10" fill="white" opacity="0.4"/>

            <!-- みかんの分割線 -->
            <line x1="140" y1="80" x2="140" y2="280" stroke="#1A1A1A" stroke-width="2" stroke-dasharray="4 4" opacity="0.4"/>
            <line x1="40" y1="180" x2="240" y2="180" stroke="#1A1A1A" stroke-width="2" stroke-dasharray="4 4" opacity="0.4"/>
            <path d="M90 100 Q140 80 190 100" stroke="#1A1A1A" stroke-width="2" stroke-dasharray="4 4" opacity="0.3" fill="none"/>
            <path d="M90 260 Q140 280 190 260" stroke="#1A1A1A" stroke-width="2" stroke-dasharray="4 4" opacity="0.3" fill="none"/>

            <!-- キャラクター目 -->
            <circle cx="118" cy="168" r="8" fill="#1A1A1A"/>
            <circle cx="162" cy="168" r="8" fill="#1A1A1A"/>
            <circle cx="121" cy="165" r="3" fill="white"/>
            <circle cx="165" cy="165" r="3" fill="white"/>

            <!-- スマイル -->
            <path d="M120 198 Q140 216 160 198" stroke="#1A1A1A" stroke-width="3.5" stroke-linecap="round" fill="none"/>

            <!-- ほっぺ -->
            <circle cx="104" cy="192" r="10" fill="#FFB347" opacity="0.7"/>
            <circle cx="176" cy="192" r="10" fill="#FFB347" opacity="0.7"/>
          </svg>

          <!-- フローティングバッジ -->
          <div
            class="absolute -top-2 -right-4 bg-white border-[3px] border-ink px-3 py-1.5 font-black text-sm brutal-shadow"
            style="transform: rotate(6deg);"
          >
            広告 ✓
          </div>
          <div
            class="absolute top-16 -left-8 bg-leaf text-white border-[3px] border-ink px-3 py-1.5 font-black text-sm brutal-shadow"
            style="transform: rotate(-4deg);"
          >
            システム ✓
          </div>
          <div
            class="absolute bottom-12 -right-6 bg-sky text-white border-[3px] border-ink px-3 py-1.5 font-black text-sm brutal-shadow"
            style="transform: rotate(3deg);"
          >
            ポスティング ✓
          </div>
        </div>
      </div>

    </div>
  </div>

  <!-- スクロールインジケーター -->
  <div
    class="scroll-indicator absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 text-ink"
    aria-hidden="true"
  >
    <span class="text-xs font-bold tracking-widest uppercase opacity-70">Scroll</span>
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
      <path d="M12 5V19M12 19L5 12M12 19L19 12" stroke="#1A1A1A" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </div>
</section>
