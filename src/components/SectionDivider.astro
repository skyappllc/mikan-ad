---
interface Props {
  topColor: string;
  bottomColor: string;
  flip?: boolean;
}
const { topColor, bottomColor, flip = false } = Astro.props;

const ZIGZAG_PATH =
  'M0,60 L0,40 L36,0 L72,40 L108,0 L144,40 L180,0 L216,40 L252,0 L288,40 L324,0 L360,40 L396,0 L432,40 L468,0 L504,40 L540,0 L576,40 L612,0 L648,40 L684,0 L720,40 L756,0 L792,40 L828,0 L864,40 L900,0 L936,40 L972,0 L1008,40 L1044,0 L1080,40 L1116,0 L1152,40 L1188,0 L1224,40 L1260,0 L1296,40 L1332,0 L1368,40 L1404,0 L1440,40 L1440,60 Z';
---

<div aria-hidden="true" style="line-height: 0; overflow: hidden;">
  <svg
    viewBox="0 0 1440 60"
    preserveAspectRatio="none"
    style="display: block; width: 100%; height: 60px;"
    xmlns="http://www.w3.org/2000/svg"
  >
    <rect width="1440" height="60" fill={flip ? bottomColor : topColor} />
    {flip ? (
      <path
        d={ZIGZAG_PATH}
        fill={topColor}
        transform="scale(1,-1) translate(0,-60)"
      />
    ) : (
      <path d={ZIGZAG_PATH} fill={bottomColor} />
    )}
  </svg>
</div>
